<h1>Entries</h1>

<div class="container mt-4">
  <div class="row">
    <% @entries.each do |entry| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= entry["title"] %></h5>
            <p class="card-text"><%= entry["content"] %></p>
            <a href="/entries/<%= entry["id"] %>" class="btn btn-primary">View</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
